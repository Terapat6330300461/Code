<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="-1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/cssLogin")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryvalidator")

    @RenderSection("scripts", required: false)
</head>

<body>
    <style>

        body {
            background: #f7f7f7;
        }

        .shadow {
            box-shadow: 0 4px 10px 0 rgb(164, 164, 164);
        }

        .message_style {
            margin-bottom: 0px !important;
            font-size: 18px;
            border-radius: 16px 16px 0px 0px;
            padding: 30px 0px 30px 0px;
        }

        #box_area {
            background-color: #FFFFFF;
            clear: both;
            padding: 16px 24px 16px 24px;
            border-radius: 0px 0px 16px 16px;
        }

        #box_position {
            max-width: 340px;
            position: fixed;
            top: 140px;
            border-radius: 16px 16px 16px 16px;
            margin-left:40px;
        }

        .ipqc_img {
            max-width: 500px;
            position: fixed;
            margin-top: 130px;
            margin-right: 60px;
            z-index: -1;
        }

        @@media screen and (max-width: 768px) {
            .ipqc_img {
                display: none !important;
            }

            #box_position {
                margin-left: 0px;
                left: 10%;
                right: 10%;
            }
        }



        .navbar-custom {
            background-color: #323232;
        }
    

    </style>


    <nav class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">

                <div class="navbar-brand">
                    <img style="display: inline-block;width:60px;float:left" src="~/Content/Styles/images/logo.png" />
                    <span style="color: #FFF;float:left;font-size:20px;margin-top:1px">IPQC</span>
                </div>

            </div>

        </div>
    </nav>


    <div class="container">
        <div class="col-lg-6 col-xs-6" >
            <div id="box_position" class="shadow">
                <div class="text-center message_style" style="font-weight:bold;background:#6fa8d2;color:white;">
                    USER LOGIN
                </div>
                <div id="box_area">

                    @RenderBody()
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-xs-6">
            @*<img class="ipqc_img" src="~/Content/Styles/images/IPQCimg.png" />*@
        </div>

    </div>

    <div style=" position:fixed; right: 0px; bottom: 0px; left: 0px; padding: 1rem; text-align: center; margin-left: 0px; margin-right: 0px; margin-top: 5px;">
        <div>
            <div style="text-align: right;margin-right:12px;padding-bottom:4px;color:#000;font-size:12px">@Html.Partial("_FooterPartial")</div>
        </div>
    </div>


</body>
</html>
